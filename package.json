{
    "name": "elasticsearch-autocomplete",
    "version": "0.0.1",
    "description": "",
    "author": "Adrian Boratyn",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build --path tsconfig.build.json",
        "format": "yarn prettier -w ./src",
        "start": "nest start --path tsconfig.json",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "upd": "yarn upgrade-interactive --latest",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "es:seed": "yarn ts-node --project=tsconfig.json ./src/scripts/es-seed.ts"
    },
    "dependencies": {
        "@apollo/server": "4.11.3",
        "@elastic/elasticsearch": "8.15.0",
        "@nestjs/apollo": "13.0.4",
        "@nestjs/common": "11.0.12",
        "@nestjs/config": "4.0.2",
        "@nestjs/core": "11.0.12",
        "@nestjs/elasticsearch": "11.0.0",
        "@nestjs/graphql": "13.0.4",
        "@nestjs/platform-express": "11.0.12",
        "@nestjs/terminus": "11.0.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.1",
        "date-fns": "4.1.0",
        "graphql": "16.10.0",
        "ramda": "0.30.1",
        "reflect-metadata": "0.2.2",
        "rxjs": "7.8.2"
    },
    "devDependencies": {
        "@nestjs/cli": "11.0.5",
        "@nestjs/schematics": "11.0.2",
        "@nestjs/testing": "11.0.12",
        "@stylistic/eslint-plugin-ts": "4.2.0",
        "@types/express": "5.0.1",
        "@types/jest": "29.5.14",
        "@types/node": "22.14.0",
        "@types/ramda": "0.30.2",
        "@types/supertest": "6.0.3",
        "@typescript-eslint/eslint-plugin": "8.29.0",
        "@typescript-eslint/parser": "8.29.0",
        "eslint": "9.23.0",
        "eslint-config-prettier": "10.1.1",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-nested-if": "1.0.0",
        "eslint-plugin-no-else": "0.2.2",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-functional": "9.0.1",
        "eslint-plugin-prettier": "5.2.6",
        "jest": "29.7.0",
        "prettier": "3.5.3",
        "rimraf": "6.0.1",
        "source-map-support": "0.5.21",
        "supertest": "7.1.0",
        "ts-jest": "29.3.1",
        "ts-loader": "9.5.2",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.8.2",
        "typescript-eslint": "8.29.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
